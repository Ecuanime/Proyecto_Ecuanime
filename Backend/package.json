{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend para negocio de ropa mayorista",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "create-admin": "node src/utils/createAdmin.js",
    "install-frontend": "cd ../frontend && npm install",
    "build-frontend": "npm run install-frontend && cd ../frontend && npm run build",
    "build": "npm run build-frontend",
    "postinstall": "npm run install-frontend && npm run build-frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^7.0.5",
    "react-countup": "^6.5.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
